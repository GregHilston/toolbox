# Personal Foundation specific

# Enables media volume keys
bindsym XF86AudioMute exec amixer sset -c 5 'Speaker' toggle
bindsym XF86AudioLowerVolume exec amixer -c 5 sset 'Speaker' 5%-
bindsym XF86AudioRaiseVolume exec amixer -c 5 sset 'Speaker' 5%+

# Media Keys
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Start i3blocks to display a workspace bar
bar {
    font pango: SauceCodePro Nerd Font 9
    i3bar_command i3bar
    output primary
    position top
    status_command i3blocks
    strip_workspace_numbers yes
    tray_output nonprimary

    colors {
        background #282A36
        statusline #F8F8F2
        separator  #44475A

        focused_workspace  #44475A #44475A #F8F8F2
        active_workspace   #282A36 #44475A #F8F8F2
        inactive_workspace #282A36 #282A36 #BFBFBF
        urgent_workspace   #FF5555 #FF5555 #F8F8F2
        binding_mode       #FF5555 #FF5555 #F8F8F2
    }
}

bar {
    font pango: SauceCodePro Nerd Font 10
    i3bar_command i3bar
    output DP-4
    position top
    strip_workspace_numbers yes
    tray_output DP-4

    colors {
        background #282A36
        statusline #F8F8F2
        separator  #44475A

        focused_workspace  #44475A #44475A #F8F8F2
        active_workspace   #282A36 #44475A #F8F8F2
        inactive_workspace #282A36 #282A36 #BFBFBF
        urgent_workspace   #FF5555 #FF5555 #F8F8F2
        binding_mode       #FF5555 #FF5555 #F8F8F2
    }
}

bar {
    font pango: SauceCodePro Nerd Font 10
    i3bar_command i3bar
    output DP-2
    position top
    strip_workspace_numbers yes
    tray_output DP-2

    colors {
        background #282A36
        statusline #F8F8F2
        separator  #44475A

        focused_workspace  #44475A #44475A #F8F8F2
        active_workspace   #282A36 #44475A #F8F8F2
        inactive_workspace #282A36 #282A36 #BFBFBF
        urgent_workspace   #FF5555 #FF5555 #F8F8F2
        binding_mode       #FF5555 #FF5555 #F8F8F2
    }
}

# names workspaces
set $ws1 "1:coms"
set $ws2 "2:music"

set $ws5 "3:terminal"
set $ws6 "4:ide"
set $ws7 "5:browser"
set $ws7 "6:other"

set $ws3 "8:notes"
set $ws4 "9:misc"

# switch to workspace
bindsym $mod+1 workspace "1:coms"
bindsym $mod+2 workspace "2:music"

bindsym $mod+3 workspace "3:terminal"
bindsym $mod+4 workspace "4:ide"
bindsym $mod+5 workspace "5:browser"
bindsym $mod+6 workspace "6:other"

bindsym $mod+8 workspace "8:notes"
bindsym $mod+9 workspace "9:misc"

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace "1:coms"
bindsym $mod+Shift+2 move container to workspace "2:music"

bindsym $mod+Shift+3 move container to workspace "3:terminal"
bindsym $mod+Shift+4 move container to workspace "4:ide"
bindsym $mod+Shift+5 move container to workspace "5:browser"
bindsym $mod+Shift+6 move container to workspace "6:other"

bindsym $mod+Shift+8 move container to workspace "8:notes"
bindsym $mod+Shift+9 move container to workspace "9:misc"

# Putting workspaces on specific monitors
workspace "1:coms" output DP-4
workspace "2:music" output DP-4

workspace "3:terminal" output primary
workspace "4:ide" output primary
workspace "5:browser" output primary
workspace "6:other" output primary

workspace "8:notes" output DP-2
workspace "9:misc" output DP-2
